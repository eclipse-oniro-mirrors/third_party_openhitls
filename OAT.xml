<configuration>
    <oatconfig>
        <licensefile></licensefile>
        <policylist>
            <policy name="projectPolicy" desc="">
                <policyitem type="license" name="MulanPSL-2.0" path=".*" rule="may" group="defaultGroup" filefilter="defaultPolicyFilter" desc="openHiTLS license"/>
                <policyitem type="copyright" name="*" path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc=""/>
            </policy>
        </policylist>
        <filefilterlist>
            <filefilter name="defaultPolicyFilter" desc="Filters for compatibilityï¼Œlicense header policies">
                <filteritem type="filename" name=".gitmodules" desc="Git Modules"/>
                <filteritem type="filename" name="Third_Party_Open_Source_Software_Notice" desc="Third Party OpenSource Software Notice"/>
                <filteritem type="filepath" name="testcode/.*" desc="test or certification binary"/>
            </filefilter>
            <filefilter name="binaryFileTypePolicyFilter" desc="Filters for binary file policies">
                <filteritem type="filename" name="LICENSE" desc="LICENSE"/>
                <filteritem type="filepath" name="docs/.*" desc="Sample Image"/>
                <filteritem type="filepath" name="testcode/.*" desc="test or certification binary"/>
            </filefilter>
        </filefilterlist>
    </oatconfig>
</configuration>
